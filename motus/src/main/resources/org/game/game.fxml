<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.game.GameController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label fx:id="attemptsLabel" style="-fx-font-size: 24" layoutX="50" layoutY="50"/>
    <TextField fx:id="wordInput" onAction="#submitWord" layoutX="100" layoutY="100"/>
    <Label fx:id="winOrLoseOrErrorLabel" layoutX="150" layoutY="150"/>
    <Label fx:id="previousAttemptsLabel" layoutX="200" layoutY="200"/>
</VBox>